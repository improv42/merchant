<br>
<div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
  <div class="well">
    <h3 class="text-center"><%= @product.name %></h3>

    <p>
      <%= image_tag @product.avatar.url(:medium), class: 'img-responsive img-circle center-block' %>
    </p>

    <p>
      <strong>Current price:</strong>
      <%= number_to_currency @product.current_price %>
    </p>

    <p>
      <strong>Quantity:</strong>
      <%= @product.quantity %>
    </p>

    <p>
      <strong>Description:</strong>
      <%= @product.description %>
    </p>

    <p>
      <strong>Category:</strong>
      <%= @product.category.name %>
    </p>

    <p>
      <strong>Brand:</strong>
      <%= @product.brand.name %>
    </p>
  </div>

  <div class="text-center">
    <button class="btn btn-xs btn-default">
      <%= link_to 'Edit', edit_product_path(@product) %>
    </button>
    <button class="btn btn-xs btn-default">
      <%= link_to fa_icon('trash-o', text: 'Delete'), @product, method: :delete, data: { confirm: 'Are you sure?' } %>
    </button>
    <button class="btn btn-xs btn-default">
      <%= link_to 'Back', products_path %>
    </button>
  </div>
</div>
