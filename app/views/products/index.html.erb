<h1 class="text-center">
  Listing Products
  <br>
  <button class="btn btn-xs btn-info">
    <%= link_to 'New Product', new_product_path %>
  </button>
</h1>

<br>

<div class="row">
  <% @products.order('name').each do |product| %>
    <div class="col-xs-2 col-md-3">
      <div class="panel" id="product_index_panel">
        <div class="panel-heading">
          <h3 class="text-center"><%= product.name %></h3>
        </div>
        <div class="panel-body">
          <%= image_tag product.avatar.url(:medium), class: 'img-responsive img-circle center-block' %>
          <p class="text-center">
            <strong>Price: </strong><%= number_to_currency product.current_price %>
          </p>
          <p class="text-center">
            <strong>Quantity: </strong><%= product.quantity %>
          </p>
          <br>
          <div class="text-center">
            <button class="btn btn-xs btn-info">
                <%= link_to fa_icon('eye', text: 'Show'), product %>
            </button>
            <button class="btn btn-xs btn-info">
              <%= link_to fa_icon('pencil', text: 'Edit'), edit_product_path(product) %>
            </button>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>