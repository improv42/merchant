<h1 class="text-center">
  Listing Products
  <br>
  <button class="btn btn-xs btn-info">
    <%= link_to 'New Product', new_product_path %>
  </button>
</h1>

<br>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Current price</th>
      <th>Quantity</th>
      <th>Description</th>
      <th>Category</th>
      <th>Brand</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= number_to_currency product.current_price %></td>
        <td><%= product.quantity %></td>
        <td><%= product.description %></td>
        <td><%= product.category %></td>
        <td><%= product.brand %></td>
        <td><%= link_to fa_icon('eye', text: 'Show'), product %></td>
        <td><%= link_to fa_icon('pencil', text: 'Edit'), edit_product_path(product) %></td>
        <td><%= link_to fa_icon('trash-o', text: 'Delete'), product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

