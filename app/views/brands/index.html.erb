<h1 class="text-center">
  Listing Brands
  <br>
  <button class="btn btn-xs btn-info">
    <%= link_to 'New Brand', new_brand_path %>
  </button>
</h1>
<div class="row">
  <div class="col-sm-4 col-sm-offset-4">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @brands.order('name').each do |brand| %>
          <tr>
            <td><%= brand.name %></td>
            <td><%= link_to fa_icon('eye', text:'Show'), brand %></td>
            <td><%= link_to fa_icon('pencil', text: 'Edit'), edit_brand_path(brand) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>