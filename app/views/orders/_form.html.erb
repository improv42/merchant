<%= simple_form_for(@order) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :ship_name, label: 'Ship to:', placeholder: 'Who are you sending it to?' %>
    <%= f.input :ship_address, label: 'Shipping Address:', placeholder: "Street\nCity, State  Zip" %>
    <%= f.input :payment_type, collection: Order::PAYMENT_TYPES, prompt: 'Choose a fake payment type' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
